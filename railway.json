{
    "build": "cd client && npm install && npm run build",
    "start": "cd server && npm start",
    "deploy": {
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE",
        "sleep": false
    },
    "nixpacks": {
        "phases": {
            "install": {
                "cmds": [
                    "npm ci",
                    "cd client && npm install"
                ]
            },
            "build": {
                "cmds": [
                    "cd client && npm run build"
                ]
            },
            "start": {
                "cmd": "cd server && npm start"
            }
        }
    },
    "env": {
        "NODE_ENV": "production"
    }
}